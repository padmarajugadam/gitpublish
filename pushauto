


pipeline {
 agent any
	tools {
        maven 'maven3.6.1' 
    }
 stages {
 
 	stage('Demo') {
     	  steps {
       		echo 'Hello world'
       	        
               }
	              }
  
	 
	 stage('Build') { 
            steps {
                echo "maven build"
            }
        }
	
	 stage('Analysis') {
	 steps {
              echo "Analysis"
            }
	 }
	  stage("Quality Gate") {
            steps {
              echo "quality passed"
            }
          }
      
        }						   

    post {
        
        success {

           withCredentials([usernamePassword(credentialsId: 'gitpush', passwordVariable: 'pass', usernameVariable: 'name')]) {
         
	    sh 'git clone https://${name}:${pass}@github.com/padmarajugadam/gitpublish.git develop -b develop'
                    sh 'git add .'
                    sh 'git commit -m "foobar" '
                    sh 'git push'
           }
        }
	 failure {
            echo 'I failed :('
        }
    }
}
